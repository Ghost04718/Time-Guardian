{
    "manifest_version": 3,
    "name": "Time Guardian",
    "version": "1.2",
    "description": "Time Guardian, Guard Your Time. Time Guardian is a time management tool that helps you to stay aware of the time.",
    "permissions": [
        "notifications",
        "storage",
        "alarms",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/guard-16.png",
            "32": "images/guard-32.png",
            "128": "images/guard-128.png"
        }
    },
    "icons": {
        "16": "images/guard-16.png",
        "32": "images/guard-32.png",
        "128": "images/guard-128.png"
    },
    "author": "Adam Chen",
    "homepage_url": "https://ghost04718.github.io/",
    "minimum_chrome_version": "88",
    "offline_enabled": true
}